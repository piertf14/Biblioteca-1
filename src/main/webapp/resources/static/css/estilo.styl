* 
  margin 0
  padding 0
  font-family "Droid Sans", sans-serif;

body
  font-size 13px
  background-color: #fff

tr.over
  background-color: #eee
  cursor: pointer

tr:hover.over
  background-color: #fff
  cursor: pointer

.record_properties th
  font-size: 10px
  text-align: right
  padding-right: 10px
  padding-left: 10px
  background-color: #bcbbc6

.record_properties
  margin-top: 20px
  width: 100%

nav
  margin: 0 auto 0 auto
  float: left
  display: inline-block
  background-color: #eee
  border-bottom: 3px solid #00bfff
  width: 100%

nav ul
  list-style: none

nav ul li.title
  color: #ccc
  background-color: #555
  text-align: center

nav ul li.right
  float: right

nav ul li
  margin: 0
  float: left
  display: block
  border-right: 1px solid #ddd

nav ul li a,
nav ul li.title
  line-height 3em
  padding 0 1.5em 0 1.5em
  //padding: 10px 20px 10px 20px

nav ul li.title
  font-style italic
  font-weight 700

nav ul li a
  color: #282828
  display: block
  text-decoration: none

nav ul li.selected a
  font-weight: normal
  color: #fff
  background-color: #555

nav ul li a:hover
  color: #fff
  background-color: #555

header
  float: left
  display: block
  width: 100%
  padding: 30px 0 0 0

header h1
  padding-left: 40px
  font-style: italic
  color: #333

section
  float: left
  width: 100%

article
  background-color: #eee
  margin: 20px 50px
  border: 1px solid #ccc
  padding: 10px 15px 20px 15px
  border-bottom: 3px solid #00bfff

article h2
  font-style: italic
  margin: 0 0 20px 0
  padding: 0 0 15px 0
  border-bottom: 1px solid #ddd

input::-webkit-input-placeholder
  font-style: italic

article form input[type=submit],
article form input[type=button],
article form input[type=reset]
  font-size: 14px
  font-weight: normal
  color: #fff
  background-color: #555
  border: 0
  padding: 7px 15px 5px 15px

input[type=button]
  font-weight: bold
  color: #ccc
  background-color: #555
  border: 0
  padding: 7px 15px 5px 15px

#a
  font-size: 13px
  font-weight: bold
  color: #ccc
  background-color: #555
  border: 0
  padding: 7px 15px 5px 15px
  text-decoration: none

article span.success
  display: block
  padding: 5px 10px
  color: #008000
  font-style: italic
  border: 1px solid #008000
  margin: 3px 40px 20px 40px
  background-color: #cfffc9

article span.error
  display: block
  padding: 5px 10px
  color: #f00
  font-style: italic
  border: 1px solid #f00
  margin: 3px 40px 20px 40px
  background-color: #ffc9c9

article form table tbody span.error
  background-color: inherit
  border: none
  padding: 0
  margin: 0
  display: inline
  color: #f00
  font-style: italic

article form input[type=text],
article form input[type=password]
  padding: 3px 4px

article form table tbody th
  padding: 5px 10px 5px 30px
  text-align: right

article form table tfoot td
  text-align: center
  padding: 10px 0 0 0

article table.list
  border 1px solid #ddd
  margin-top: 20px

article form#search
  margin-top: 20px

article a.button
  text-decoration: none
  font-size: 14px
  font-weight: normal
  color: #fff
  background-color: #555
  border: 0
  padding: 7px 15px 5px 15px

article table.list thead th
  border-bottom: 1px solid #ddd
  padding: 2px 10px 1px 10px

article table.list tbody td
  padding: 0 15px

article table td a
  text-decoration: none
  color: #00bfff

article table td a:hover
  text-decoration: underline

